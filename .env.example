# Supabase PostgreSQL connection
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres?schema=public"

# Supabase project credentials
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="[YOUR-ANON-KEY]"
SUPABASE_SERVICE_ROLE_KEY="[YOUR-SERVICE-ROLE-KEY]"

# OpenAI (for AI summarization)
OPENAI_API_KEY="[YOUR-OPENAI-API-KEY]"

# Site URL (used for OGP metadataBase)
# Vercel デプロイ時は VERCEL_PROJECT_PRODUCTION_URL が自動注入されるため設定不要。
# カスタムドメインを使う場合や Vercel 以外の環境では明示的に設定する。
# NEXT_PUBLIC_SITE_URL="https://your-domain.example.com"

# OGP image URL (絶対 URL で指定。CloudFront など CDN 経由の場合はそのURLを設定)
# Vercel 管理画面の Environment Variables にも同じ値を設定すること。
NEXT_PUBLIC_OG_IMAGE_URL="https://xxxx.cloudfront.net/og.png"
